{
  "name": "space-invasion-frontend",
  "version": "1.0.0",
  "description": "SpaceInvasion frontend",
  "main": "app.js",
  "author": "SpaceInvasionLab",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Nikita-Boyarskikh/SpaceInvasionFrontend.git"
  },
  "scripts": {
    "start": "node app.js",
    "jest": "jest",
    "lint": "eslint .",
    "dev": "webpack -w &",
    "webpack": "webpack",
    "test": "jest && eslint .",
    "fix-lint": "eslint . --fix"
  },
  "dependencies": {
    "@types/express": "^4.0.37",
    "awesome-typescript-loader": "^3.4.0",
    "css-loader": "^0.28.7",
    "express": "^4.16.1",
    "morgan": "^1.8.2",
    "pug": "^2.0.0-rc.4",
    "pug-loader": "^2.3.0",
    "style-loader": "^0.19.0",
    "typescript": "^2.6.2",
    "uglifyjs-webpack-plugin": "^1.1.2",
    "url-loader": "^0.6.2",
    "webpack": "^3.9.1",
    "whatwg-fetch": "^2.0.3"
  },
  "devDependencies": {
    "@types/jest": "^21.1.8",
    "babel-jest": "^21.2.0",
    "babel-preset-env": "^1.6.1",
    "coveralls": "^3.0.0",
    "eslint": "^4.12.1",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-plugin-import": "^2.7.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^21.2.1",
    "jest-fetch-mock": "^1.3.3",
    "ts-jest": "^21.1.3",
    "tslint": "^5.8.0"
  },
  "jest": {
    "globals": {
      "useBabelrc": true
    },
    "browser": true,
    "setupFiles": [
      "<rootDir>/public/index.ts"
    ],
    "testRegex": "(<rootDir>/tests/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/public/dist/"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/public/dist/"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/public/dist/"
    ],
    "verbose": true,
    "moduleNameMapper": {
      "\\.(css|less)$": "identity-obj-proxy"
    },
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js",
      "\\.(pug)$": "<rootDir>/mocks/pugProcessor.js",
      "\\.(jsx?)$": "babel-jest"
    },
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "public/**/*.{js,jsx,ts,tsx}",
      "!public/common/**",
      "!public/dist/**",
      "!public/pnotify.custom.min.js"
    ],
    "mapCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
