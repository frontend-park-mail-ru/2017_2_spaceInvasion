{
  "name": "space-invasion-frontend",
  "version": "1.0.0",
  "description": "SpaceInvasion frontend",
  "main": "app.js",
  "author": "SpaceInvasionLab",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Nikita-Boyarskikh/SpaceInvasionFrontend.git"
  },
  "scripts": {
    "start": "node app.js",
    "compile-pug": "pug -c --extension 'pug.js' --name-after-file public/blocks/",
    "jest": "jest",
    "lint": "eslint .",
    "dev": "webpack -w",
    "webpack": "webpack",
    "test": "jest || eslint .",
    "fix-lint": "eslint . --fix"
  },
  "dependencies": {
    "@types/jest": "^21.1.4",
    "@types/express": "^4.0.37",
    "express": "^4.16.1",
    "morgan": "^1.8.2",
    "whatwg-fetch": "^2.0.3",
    "pnotify": "^3.2.1",
    "semantic-ui": "^2.2.13",
    "webpack": "^3.7.1",
    "pug": "^2.0.0-rc.4",
    "style-loader": "^0.19.0",
    "css-loader": "^0.28.7",
    "pug-loader": "^2.3.0",
    "ts-loader": "^3.0.5",
    "typescript": "^2.5.3"
  },
  "devDependencies": {
    "coveralls": "^3.0.0",
    "eslint": "^4.8.0",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-plugin-import": "^2.7.0",
    "jest": "^21.2.1",
    "pug-jest": "^1.0.1",
    "ts-jest": "^21.1.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "public/**/*.{js,jsx,ts,tsx}",
      "!public/common/**/*",
      "!public/dist/**/*",
      "!public/pnotify.custom.min.js"
    ],
    "moduleDirectories": [
      "node_modules",
      "<rootDir>/public"
    ],
    "globals": {
      "NODE_ENV": "test"
    },
    "verbose": true,
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js",
      "\\.(pug)$": "<rootDir>/node_modules/pug-jest",
      "^.+\\.jsx?$": "<rootDir>/node_modules/babel-jest"
    },
    "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
